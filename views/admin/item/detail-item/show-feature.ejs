<div
  class="tab-pane fade show active"
  id="showFeature"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <!-- Data Tables example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/feature"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Enter Name "
                required
              />
            </div>
            <div class="form-group">
              <label for="name">QTY</label>
              <input
                type="number"
                class="form-control"
                name="qty"
                placeholder="Enter qty"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input type="file" class="form-control" name="image" required />
            </div>
            <input type="hidden" value="<%=itemId%>" name="itemId" />
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image Url</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for( let i = 0; i < feature.length; i++ ) { %>
                <tr>
                  <td><%= feature[i].name%></td>
                  <td><%= feature[i].qty%></td>
                  <td>
                    <img
                      src="https://admin-stacation.herokuapp.com/<%=feature[i].imageUrl  %>"
                      alt="imageUrl"
                      height="40px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%=itemId %>/feature/<%= feature[i].id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void();"
                        type="button"
                        class="btn btn-warning btn-circle btn-sm btn-update"
                        data-id="<%= feature[i].id %>"
                        data-name="<%= feature[i].name %>"
                        data-qty="<%= feature[i].qty %>"
                        ><i class="fas fa-edit"></i
                      ></a>
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>

                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
